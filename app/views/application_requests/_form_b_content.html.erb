            <td><%=ec.hidden_field :editorial_concept_criteria_id, value: ed_criterium.id%></td>
            <td><%=ed_criterium.criterium%></td>
            <td><%=ec.number_field :score, :required => true %></td>
            <td><%=ec.text_area :remark, :required => true %></td>
          </tr>
          <% end %>
          <% end %>
          <div class="actions">
            <%= f.submit :'Crear EvaluaciÃ³n' %>
          </div>
          <% end %>
        </table>
      </div>
    </div>
    <div><hr class="style13"></div>
    <div class="form-basic-2">
      <div class="text-center">
        <div class="li-custom" style="width:100px; margin:auto; padding:10px 10px 10px 10px">
          <%= link_to 'Volver', :back %>
        </div>
      </div>
    </div>
  </div>
</div>
