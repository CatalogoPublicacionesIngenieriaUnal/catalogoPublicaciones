            <% end %>
          </ul>
        </div>
        <% end %>
        <table style="width:100%">
          <%- @editorial_concept_criteria.zip(@crits).each do |ed_criterium, crit| %>
          <%= fields_for 'edit_criteria[]', crit do |ec| %>
