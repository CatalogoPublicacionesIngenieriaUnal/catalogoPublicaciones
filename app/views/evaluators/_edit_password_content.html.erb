<div class="row">
  <div class="col-sm-2">
    <%= render 'static/menu_publicaciones' %>
  </div>
  <div class="text-center">
    <div class="col-md-10" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Editar contraseña</h1>
    </div>
  </div>
  <div class="col-sm-10">
    <div><hr class="style13"></div>
    <div class="main-content">
      <div class="form-basic">
        <%= form_for(@evaluator, url: evaluator_update_password_path ) do |f| %>
        <% if @evaluator.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@evaluator.errors.count, "error") %> prohibited this evaluator from being saved:</h2>

          <ul>
            <% @evaluator.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-title-row">
          <h1>Datos básicos del evaluador</h1>
        </div>

        <div class="form-row">
          <label>
            <span>Contraseña</span>
            <%= f.password_field :password, :autocomplete => "off"  %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Confirmar contraseña</span>
            <%= f.password_field :password_confirmation %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Contraseña actual.(Necesitamos su contraseña actual para confirmar los cambios)</span>
            <%= f.password_field :current_password %>
          </label>
        </div>

        <div class="action_container">
          <%= f.submit :"Cambiar contraseña", :class=>"button" %>
        </div>
        <% end %>
      </div>
    </div>
    <div><hr class="style13"></div>
    <div class="form-basic-2">
      <div class="text-center">
        <div class="li-custom" style="width:100px; margin:auto; padding:10px 10px 10px 10px">
          <%= link_to 'Volver', :back %>
        </div>
      </div>
    </div>
  </div>
</div>
