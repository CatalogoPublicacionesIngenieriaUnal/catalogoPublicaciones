<div class="row">
  <div class="text-center">
    <div class="col-md-6 col-md-offset-3" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Nuevo evaluador</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <%= render 'static/menu' %>
  </div>

  <div class="col-sm-10">
    <div class="main-content">
      <div class="form-basic">
        
        <%= form_for(judge) do |f| %>
        <% if judge.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(judge.errors.count, "error") %> prohibited this judge from being saved:</h2>

          <ul>
            <% judge.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-title-row">
          <h1>Datos de la publicación</h1>
        </div>

        <div class="form-row">
          <label>
            <span>Nombres</span>
            <%= f.text_field :name %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Apellidos</span>
            <%= f.text_field :lastname %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Correo electrónico</span>

            <%= f.text_field :email %>

          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Teléfono</span>
            <%= f.number_field :telephone %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Idioma</span>
            <select name="language">
              <option>Español</option>
              <option>Inglés</option>
              <option>Francés</option>
              <option>Alemán</option>
            </select>
          </label>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
