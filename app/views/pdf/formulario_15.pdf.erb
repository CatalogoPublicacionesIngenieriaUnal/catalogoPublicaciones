    <tr>
      <th rowspan="2" id="title1">Criterio</th>
      <th id="title1">Excelente</th>
      <th id="title1">Aceptable</th>
      <th id="title1">Deficiente</th>
      <th rowspan="2" id="title1">N/A</th>
    </tr>
