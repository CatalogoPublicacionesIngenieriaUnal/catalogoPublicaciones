<div class="row">
  <div class="col-sm-2">
    <%= render 'static/menu_publicaciones' %>
  </div>
  <div class="text-center">
    <div class="col-md-10" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Registro</h1>
    </div>
  </div>

  <div class="col-sm-10">
    <div><hr class="style13"></div>
    <div class="main-content">
      <div class="form-basic">
        <%= form_for(professor) do |f| %>
        <% if professor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(professor.errors.count, "error") %> prohibited this professor from being saved:</h2>

          <ul>
            <% professor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-title-row">
          <h1>Datos básicos del docente</h1>
        </div>

        <div class="form-row">
          <label>
            <span>Usuario</span>
            <%= f.text_field :username, :disabled=>true%>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Nombres</span>
            <%= f.text_field :first_name, :disabled=>true%>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Apellidos</span>
            <%= f.text_field :last_name, :disabled=>true%>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Tipo de identificación</span>
            <%= f.select(:identity_document_type, Professor.identity_document_types.keys) %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Número de identificación</span>
            <%= f.number_field :identity_document%>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Lugar de expedición</span>
            <%= f.text_field :identity_document_issued%>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Correo electrónico</span>
            <%= f.text_field :email, :disabled=>true%>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Departamento</span>
            <%= f.select(:department, Professor.departments.keys) %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Otra dependencia</span>
            <%= f.select(:dependency, Professor.dependencies.keys) %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Cargo</span>
            <%= f.text_field :position %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Numero de contacto</span>
            <%= f.number_field :contact_number %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Genero</span>
            <%= f.select(:gender, Professor.genders.keys)%>
          </label>
        </div>

        <div class="actions">
          <%= f.submit :"Actualizar datos personales", :class=>"button"%>
        </div>

        <% end %>
      </div>
    </div>
    <div><hr class="style13"></div>
    <div class="form-basic-2">
      <div class="text-center">
        <div class="li-custom" style="width:100px; margin:auto; padding:10px 10px 10px 10px">
          <%= link_to 'Volver', :back %>
        </div>
      </div>
    </div>
  </div>
</div>
