<div class="row">
  <div class="col-sm-2">
    <%= render 'static/menu_publicaciones' %>
  </div>
  <div class="col-md-10">
    <div class="text-center" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Mis datos</h1>
      <p id="notice"><%= notice %></p>
    </div>
    <div><hr class="style13"></div>
    <div class="info">
      <ul class="info-list ">
        <li>
          <span class="inf">Usuario</span>
          <span class="value">
            <%= @professor.username %>
          </span>
        </li>
        <li>
          <span class="inf">Nombres</span>
          <span class="value">
            <%= @professor.first_name %>
          </span>
        </li>
        <li>
          <span class="inf">Apellidos</span>
          <span class="value">
            <%= @professor.last_name %>
          </span>
        </li>
        <li>
          <span class="inf">Tipo de identificación</span>
          <span class="value">
            <%= @professor.identity_document_type %>
          </span>
        </li>
        <li>
          <span class="inf">Número de identificación</span>
          <span class="value">
            <%= @professor.identity_document %>
          </span>
        </li>
        <li>
          <span class="inf">Lugar de expedición</span>
          <span class="value">
            <%= @professor.identity_document_issued %>
          </span>
        </li>
        <li>
          <span class="inf">Correo electrónico</span>
          <span class="value">
            <%= @professor.email %>
          </span>
        </li>
        <li>
          <span class="inf">Departamento</span>
          <span class="value">
            <%= @professor.department %>
          </span>
        </li>
        <li>
          <span class="inf">Otra dependencia</span>
          <span class="value">
            <%= @professor.dependency %>
          </span>
        </li>
        <li>
          <span class="inf">Cargo</span>
          <span class="value">
            <%= @professor.position %>
          </span>
        </li>
        <li>
          <span class="inf">Numero de contacto</span>
          <span class="value">
            <%= @professor.contact_number %>
          </span>
        </li>
        <li>
          <span class="inf">Genero</span>
          <span class="value">
            <%= @professor.gender %>
          </span>
        </li>
        <li>
          <span class="inf">¿Autorizado?</span>
          <span class="value">
            <%= if @professor.is_authorized == false then 'No' else 'Si' end%>
          </span>
        </li>
      </ul>
    </div>
  </div>
  <div class="col-sm-10" style="padding: 0px 0px 20px 0px">
    <div><hr class="style13"></div>
    <div class="form-basic-2">
      <div class="li-custom" style="width:250px; float:left">
        <%= link_to 'Actualizar datos personales', edit_current_professor_path %>
      </div>
      <div class="li-custom" style="width:100px; float:right">
        <%= link_to 'Volver', :back %>
      </div>
    </div>
  </div>
</div>
