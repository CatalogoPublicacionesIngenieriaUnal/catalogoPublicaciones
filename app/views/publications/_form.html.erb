<div class="row">
  <div class="text-center">
    <div class="col-md-6 col-md-offset-3" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Nueva publicación</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <%=render 'static/menu_publicaciones'%>
  </div>

  <div class="col-sm-10">
    <div class="main-content">
      <div class="form-basic">

        <%= form_for(publication) do |f| %>
        <% if publication.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

          <ul>
            <% publication.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-title-row">
          <h1>Datos de la publicación</h1>
        </div>

        <div class="form-row">
          <label>
            <span>Título</span>
            <%= f.text_field :title%>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Resumen</span>
            <%= f.text_area :abstract %>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Categoría</span>
            <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "category"),:prompt => "Seleccione una opción" %>
          </label>

        </div>

        <div class="form-row">
          <label>
            <span>Tema</span>
            <%= f.select :theme_id, options_from_collection_for_select(@themes, "id", "theme"),:prompt => "Seleccione una opción" %>
          </label>
        </div>
        <div class="form-row">
          <hr width=70% align="center">
          <center>
            <span>Por favor ingrese tres palabras clave para la búsqueda de su publicación</span>
          </center>
        </div>
        <% @words.each do |key| %>
          <%= fields_for 'words[]', key do |p| %>
            <div class="form-row">
              <label>
                <span>Palabra clave</span>
                <% options = options_from_collection_for_select(@keywords, 'id', 'keyword') %>
                <%= f.select :keyword_ids,  options, :prompt => "Seleccione una opción"  %>
              </label>
            </div>
          <% end %>
        <% end %>

        <div class="actions">
          <%= f.submit :"Crear publicación"%>
        </div>


        <div class="actions">
          <a href='/publications.pdf'
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
