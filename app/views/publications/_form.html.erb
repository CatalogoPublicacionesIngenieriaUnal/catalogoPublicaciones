<div class="row">
  <div class="text-center">
    <div class="col-md-6 col-md-offset-3" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Nueva publicación</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <%= render 'static/menu' %>
  </div>

  <div class="col-sm-10">
    <div class="main-content">
      <div class="form-basic">
        
        <%= form_for(publication) do |f| %>
        <% if publication.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

          <ul>
            <% publication.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <div class="form-title-row">
          <h1>Datos de la publicación</h1>
        </div>

        <% if false %>
        <div class="form-row">
          <label>
            <span>Título</span>
            <input type="text" name="title">
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Fecha de creación</span>
            <input type="date" name="creation">
          </label>
        </div>
        <% end %>

        <div class="form-row">
          <label>
            <span>Categoría de la publicación</span>
            <%= f.select :category, category %>
          </div>
          <div class="form-row">
            <label>
              <span>Área de profundización</span>
              <%= f.select :theme, theme%>
            </label>
          </div>

          <!-- <div class="form-row">
            <label>
              <span>Palabras clave</span>
              <input type="text" name="keywords">
            </label>
          </div> -->

          <div class="form-row">
            <label>
              <span>Resumen</span>
              <%= f.text_area :abstract %>
            </label>
          </div>

          <div class="actions">
            <%= f.submit :"Crear publicación"%>
          </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
