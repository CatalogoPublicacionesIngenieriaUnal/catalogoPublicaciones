<div class="row">
  <div class="col-sm-2">
    <%= render 'static/menu_publicaciones' %>
  </div>
  <div class="col-md-10">
    <% if professor_signed_in? %>
    <div class="text-center" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Mi Publicación</h1>
      <p id="notice"><%= notice %></p>
    </div>
    <% elsif administrator_signed_in? %>
    <div class="text-center" style="padding: 10px 0px 0px 0px;">
      <h1 style="font-size:200%;">Publicación</h1>
      <p id="notice"><%= notice %></p>
    </div>
    <% end %>
    <div><hr class="style13"></div>
    <center>
      <div class="progress" style="width:500px">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
          40%
        </div>
      </div>
    </center>
    <div class="info">
      <ul class="info-list ">
        <li>
          <span class="inf">Titulo</span>
          <span class="value">
            <%= @publication.title %>
          </span>
        </li>
        <li>
          <span class="inf">Abstract</span>
          <span class="value">
            <%= @publication.abstract %>
          </span>
        </li>
        <li>
          <span class="inf">Tema</span>
          <span class="value">
            <%= @publication.theme.theme %>
          </span>
        </li>
        <li>
          <span class="inf">Categoria</span>
          <span class="value">
            <%= @publication.category.category %>
          </span>
        </li>
        <li>
          <span class="inf">Palabras clave</span>
          <span class="value">
            <%= Keyword.find(@publication.keyword_ids[0]).keyword %>,
            <%= Keyword.find(@publication.keyword_ids[1]).keyword %>,
            <%= Keyword.find(@publication.keyword_ids[2]).keyword %>
          </span>
        </li>
        <li>
          <span class="inf">Estado</span>
          <span class="value">
            <%= @publication.application_request.state %>
          </span>
        </li>
      </ul>
    </div>

    <div><hr class="style13"></div>
    <% if professor_signed_in? %>
    <div class="li-custom" style="width:200px; float:left">
      <%= link_to('Crear Carta de Presentación', create_carta_de_presentacion_path(format: :pdf)) %>
    </div>
    <div class="li-custom" style="width:100px; float:right">
      <%= link_to 'Volver', professor_home_path %>
    </div>
    <% elsif administrator_signed_in? %>
    <div class="li-custom" style="width:100px; margin:auto; padding:10px 10px 10px 10px">
      <%= link_to 'Volver', administrator_home_path %>
    </div>
    <% end %>

    <div><hr class="style13"></div>
    <%- unless @publication.attatchments.get_attachment_by_category(:carta_presentacion) %>
    <%= render 'attatchments/form', attatchment: Attatchment.new,
    application_request: @publication.application_request,
    category: :carta_presentacion%>
    <% end %>

    <div><hr class="style13"></div>
    <% if professor_signed_in? %>
    <div class="li-custom" style="width:200px; float:left">
      <%= link_to('Crear Concepto Editorial', create_concepto_editorial_path(format: :pdf)) %>
    </div>
    <% end %>

    <center><div style="width:720px"><hr class="style13"></div></center>
    <%- unless @publication.attatchments.get_attachment_by_category(:concepto_editorial_a) %>
    <%= render 'attatchments/form', attatchment: Attatchment.new,
    application_request: @publication.application_request,
    category: :concepto_editorial_a%>
    <% end %>
    <center><div style="width:720px"><hr class="style13"></div></center>
    <%- unless @publication.attatchments.get_attachment_by_category(:manuscrito) %>
    <%= render 'attatchments/form', attatchment: Attatchment.new,
    application_request: @publication.application_request,
    category: :manuscrito%>
    <% end %>
  </div>
</div>
